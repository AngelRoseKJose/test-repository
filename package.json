{
	"name": "electron-test-app",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"main": "electron/electron.js",
	"homepage": "https://github.com/AngelRoseKJose/test-repository.git",
	"author": {
		"name": "Angel",
		"email": "roseangel.on96@gmail.com"
	},
	"description": "An Electron Test App",
	"scripts": {
		"start": "electron .",
		"dist": "electron-builder",
		"dev": "vite dev",
		"electron": "electron electron/electron.js",
		"dev:desktop": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron\"",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"build": {
		"appId": "com.example.electron-test-app",
		"productName": "electron-test-app",
		"publish": [
			{
				"provider": "github",
				"owner": "AngelRoseKJose",
				"repo": "test-repository"
			}
		],
		"files": [
			"electron/**/*",
			"build/**/*",
			"package.json"
		],
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Utility"
		}
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"concurrently": "^9.1.2",
		"electron": "^36.2.1",
		"electron-builder": "^26.0.12",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"tailwindcss": "^4.0.0",
		"vite": "^6.2.6",
		"wait-on": "^8.0.3"
	},
	"dependencies": {
		"electron-updater": "^6.6.2"
	}
}